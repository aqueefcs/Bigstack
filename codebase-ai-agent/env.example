# Codebase AI Agent Environment Configuration
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# API Gateway (will be populated after deployment)
API_GATEWAY_URL=https://your-api-gateway-id.execute-api.us-east-1.amazonaws.com/prod

# OpenSearch Configuration (will be populated after deployment)
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.us-east-1.es.amazonaws.com
OPENSEARCH_CREDENTIALS_SECRET=codebase-ai-agent-opensearch-credentials
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_opensearch_password

# DynamoDB Tables (will be populated after deployment)
DYNAMODB_SESSIONS_TABLE=codebase-ai-agent-sessions
DYNAMODB_REPOSITORIES_TABLE=codebase-ai-agent-repositories

# S3 Configuration (will be populated after deployment)
S3_BUCKET=codebase-ai-agent-storage-xxxxxxxx

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1
BEDROCK_MAX_TOKENS=4000
BEDROCK_TEMPERATURE=0.1

# OpenSearch Index Configuration
OPENSEARCH_INDEX=codebase-knowledge
VECTOR_DIMENSION=1536

# Application Configuration
NODE_ENV=development
PORT=3000

# Frontend Configuration (for development)
REACT_APP_API_URL=http://localhost:3000

# Optional: CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,https://your-frontend-domain.com

# Optional: Rate Limiting
API_RATE_LIMIT=1000
API_BURST_LIMIT=2000

# Optional: Lambda Configuration
LAMBDA_FUNCTION_NAME=codebase-ai-agent
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=1024

# Optional: Logging
LOG_LEVEL=info
